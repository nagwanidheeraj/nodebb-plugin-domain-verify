<form role="form" class="domainverify-settings">
	<div class="row">
		<div class="col-sm-2 col-xs-12 settings-header">General</div>
		<div class="col-sm-10 col-xs-12">
			<p class="lead">
				Add the allowed domains in email for registration.
			</p>
			<div class="form-group">
				<label for="allowed-domains">Allowed Domains (comma seperated values allowed)</label>
				<input type="text" id="allowed-domains" name="allowed-domains" title="Allowed Domains" class="form-control" placeholder="yourdomain.com">
			</div>
		</div>
	</div>
</form>

<button id="save" class="floating-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
	<i class="material-icons">save</i>
</button>
